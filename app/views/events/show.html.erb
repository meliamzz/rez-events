<% event = @event %>

<div class="show-global-container d-flex">
  <div class="container-fluid mb-5" id="accordion">
      <div class="card mx-auto mt-4" >
        <div class="card-header d-flex justify-content-between align-items-center btn p-0">
          <div class="primary-icon text-center <%= category_name_to_color(event.category) %>">
            <i class="fas <%= category_name_to_fa_class_name(event.category) %> fa-4x"></i>
          </div>

          <div class="info-event-header d-flex flex-column" id="heading<%= event.id %>" data-toggle="collapse" data-target="#collapse<%= event.id %>" aria-expanded="true" aria-controls="collapse<%= event.id %>">
            <div class="info-header text-left p-3">
              <h4 class="bold mb-0"><%= event.name %></h4>
              <h5 class="mb-0"><%= event.organization_name %></h5>
            </div>
            <div class="info-localisation mr-5 text-left">
              <div class="address d-flex align-items-center mx-3 pb-2">
                <i class="fas fa-map-marker-alt fa-lg mb-0 mr-1"></i>
                <p class="m-0 mr-4 clear-text"><%= event.address %></p>
                <p class="mb-0 district"><%= event.district %></p>
              </div>
            </div>
          </div>
                  <div class="home-pictures">
                    <% if event.photo.key? %>
                      <%= cl_image_tag event.photo.key %>
                    <% end %>
                  </div>
          <%# <div class="edit-status d-flex flex-column justify-content-between"> %>
            <%# <div class="edit-event pt-3 text-right"> %>
            <%# </div> %>

            <%# <div class="status-event d-flex pb-3"> %>
            <%# </div> %>

          <%# </div> %>

          <div class="info-dates d-flex">
            <p class="m-3"><%= event.start_at.strftime("%d/%m/%Y") %></p>
            <p class="m-3"><%= event.end_at.strftime("%d/%m/%Y") %></p>
          </div>
        </div>

        <div id="collapse<%= event.id%>" class="collapse" aria-labelledby="heading<%= event.id%>" data-parent="#accordion">
          <div class="card-body d-flex justify-content-between">
            <div class="d-flex collapse-all">
              <div class="infos-event">
                <div class="public-comment d-flex">
                  <div class="icone <%= category_name_to_color(event.category) %>">
                    <i class="fas fa-info-circle fa-2x"></i>
                  </div>
                  <div class="public-infos text-left mb-5">
                    <p class="bold"><%= event.category %></p>
                    <p class="secondary-info"><%= event.public_description %></p>
                  </div>
                </div>
                <div class="infos-utiles d-flex mb-5">
                  <div class="icone <%= category_name_to_color(event.category) %>">
                    <i class="fas fa-euro-sign fa-2x"></i>
                  </div>
                  <div class="utiles-info">
                    <h6 utiles-infos>Tarif</h6>
                    <p><%= event.pricing_description %></p>
                  </div>
                </div>

              </div>
                <div id="map" class="map-show"
                  style="width: 100%; height: 400px;"
                  data-markers="<%= @markers.to_json %>"
                  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
                </div>
            </div>
            <div class="info-dates"></div>
          </div>
        </div>
      </div>
  </div>
</div>


<div class="info-dates">
  <%= l(@event.start_at, format: "%^a") %><br>
  <%= l(@event.start_at, format: "%e") %><br>
  <%= l(@event.start_at, format: "%^b") %><br>
  <%= l(@event.start_at, format: "%HH%M") %><br>
</div>

<div class="info-dates">
  <%= l(@event.end_at, format: "%^a") %><br>
  <%= l(@event.end_at, format: "%e") %><br>
  <%= l(@event.end_at, format: "%^b") %><br>
  <%= l(@event.end_at, format: "%HH%M") %><br>
</div>
