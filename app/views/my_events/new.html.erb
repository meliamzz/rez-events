<div class="form-container-global" data-controller="event-form" data-event-form-current-index-value="0">
  <%= simple_form_for @event do |f| %>

    <div class="form-container form-container-paddinged" data-event-form-target="formContainer">
    <i class="fas fa-map-marker-alt"></i>
      <div class="input-classic">
        <%= f.input :name, label: "Nom de l'évènement", error: "Veuillez indiquer le nom de votre événement", :input_html => { :class => 'uppercase' }, :input_html => { :maxlength => 140 } %>
      </div>
      <div class="input-classic">
        <%= f.input :address, label: "Adresse de l'évènement" %>
      </div>
      <div class="input-classic">
        <%= f.input :district, label: "Quartier", collection: @DISTRICTS %>
      </div>
        <div class="d-flex">
          <div class="half-width">
          <%= f.input :start_at, label: "Date de début", as: :datetime, html5: true %>
          </div>
          <div class="half-width">
          <%= f.input :end_at, label: "Date de fin", as: :datetime, html5: true %>
          </div>
        </div>
        <div class="d-flex justify-content-end">
          <button type="button" data-action="event-form#next" class="btn btn-form">Suivant</button>
        </div>
    </div>

    <div class="form-container form-container-paddinged d-none" data-event-form-target="formContainer">
    <i class="fas fa-info-circle"></i>
      <div class="input-classic">
        <%= f.input :public_description, label: "Description publique", :input_html => { :maxlength => 200 } %>
      </div>
      <div class="input-classic">
        <%= f.input :pricing_description, label: "Tarification", :input_html => { :maxlength => 140 } %>
      </div>
      <%# <div class="input-classic">
        <%= f.input :photo,
                    label: "Télécharcher une image",
                    item_wrapper_class: 'category-item',
                    input_html: {class: 'photo-selector'} %>
                    <%# </div> %>
      <div class="center">
        <div class="form-input d-flex">
          <label for="file-ip-1">Télécharger une image</label>
          <input type="file" id="file-ip-1" accept="image/*">
          <div class="preview">
            <img id="file-ip-1-preview">
          </div>
        </div>
      </div>


      <div class="d-flex justify-content-between">
        <button type="button" data-action="event-form#back" class="btn btn-form">Retour</button>
        <button type="button" data-action="event-form#next" class="btn btn-form">Suivant</button>
      </div>
    </div>

    <div class="form-container d-none" data-event-form-target="formContainer">
      <h3>Catégorie de votre événements</h3>
      <div class="form-container-category">
      <%= f.input :category,
              label: "",
              required: false,
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'category-wrapper',
              item_wrapper_class: 'category-item',
              input_html: {class: 'category-selector'},
              collection: Event::CATEGORIES %>
      </div>
      <div class="d-flex justify-content-between">
        <button type="button" data-action="event-form#back" class="btn btn-form">Retour</button>
        <button type="button" data-action="event-form#next" class="btn btn-form">Suivant</button>
      </div>
    </div>


    <div class="form-container form-container-paddinged d-none" data-event-form-target="formContainer">
    <i class="fas fa-file-signature"></i>
    <div class="form-container-security">
      <%= f.input :required_safety_level,
              label: "Niveau de sécurité requis",
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'safety_levels-wrapper',
              item_wrapper_class: 'safety_levels-item',
              input_html: {class: 'safety_levels-selector'},
              collection: Event::SAFETY_LEVELS %>
    </div>
      <div class="input-classic">
        <%= f.input :requested_equipment_description, label: "Demande de matériel", :placeholder => 'Tables, chaises, sonorisation...', :input_html => { :maxlength => 200 }%>
      </div>
      <div class="input-classic">
        <%= f.input :general_comment, label: "Commentaires"%>
      </div>
      <div class="d-flex justify-content-between">
        <button type="button" data-action="event-form#back"class="btn btn btn-form">Retour</button>
        <button type="button" data-action="event-form#next" class="btn btn btn-form">Suivant</button>
      </div>
    </div>

    <div class="form-container form-container-paddinged d-none" data-event-form-target="formContainer">
    <i class="fas fa-phone-alt"></i>
      <div class="input-classic">
        <%= f.input :organization_name, label: "Structure organisatrice", :input_html => { :maxlength => 140 }%>
      </div>
      <div class="d-flex">
        <div class="half-width mr-1">
          <%= f.input :contact_last_name, label: "Nom du référent"%>
        </div>
        <div class="half-width ml-1">
          <%= f.input :contact_first_name, label: "Prénom du référent"%>
        </div>
      </div>
      <div class="d-flex">
        <div class="half-width mr-1">
          <%= f.input :contact_email, label: "Email" %>
        </div>
        <div class="half-width ml-1">
          <%= f.input :contact_phone_number, label: "Téléphone" %>
        </div>
      </div>

      <div class="d-flex justify-content-between">
          <button type="button" data-action="event-form#back" class="btn-form">back</button>
        <%= f.button :submit, "Soumettre mon événement!", class: "btn btn-form" %>
      </div>
    </div>
  <% end %>
</div>
