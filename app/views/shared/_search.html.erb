<div class="container d-flex justify-content-center">
    <div class="p-0 w-100">
      <%= form_tag root_path, method: :get do %>
        <div class="d-flex mx-auto w-75 justify-content-center">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control w-50",
            placeholder: "Find an event "
          %>
          <%= submit_tag "Search events", class: "btn btn-warning ml-2 "%>
          <%= link_to "All events", root_path, class: "btn btn-warning ml-2 " %>
        </div>
      <% end %>
    </div>

</div>

